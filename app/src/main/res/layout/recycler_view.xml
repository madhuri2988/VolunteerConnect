<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:id="@+id/lytMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:padding="10.0dip" >
            <FrameLayout
                android:id="@+id/lytImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="fill_parent"
                    android:layout_height="158dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    />

                <RelativeLayout
                    android:id="@+id/lytTitlex"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right" >

                    <TextView
                        android:id="@+id/evDateMonth"
                        android:layout_width="270dp"
                        android:layout_height="65dp"
                        android:text="Juin"

                        android:textSize="28sp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/evDateDay"
                        android:layout_width="270dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="22.0sp"
                        android:text="17"

                        android:textSize="38sp"
                        android:textColor="#ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lytTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left|center"
                  >


                    <TextView
                        android:id="@+id/tv_event"
                        style="@android:style/TextAppearance.DeviceDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Event1"
                        android:visibility="gone"
                        android:textStyle="bold" />


                </RelativeLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lytImage"
                >

                <TextView
                    android:id="@+id/tv_des_event"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="test test test"

                    android:textStyle="bold"
                    android:textColor="#051877" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>